/* pages/replyList/replyList.wxss */
.avatar{
    height: 60rpx;
    width: 60rpx;
    border-radius: 30rpx;
}
.commentContainer{
  margin-bottom: 20px;
}
.replyList{
  border-top: 1px solid #eee;
}
.replyNums{
  font-size: 30rpx;
   border-bottom: 1px solid #eee;
}
.comment{
    margin-left: 4px;
    min-height:60px;
    width:100%; 
    padding-top:5px;
    display: flex;
    border-bottom:1px solid #eee;
}
.commentImg{
  width: 10vw;
}
.commentDetail{
  width: 85vw;
}
.commnenterNickname{
  font-size: 30rpx;
  color: rgb(73, 73, 71);
}
.commentContent{
  margin-top:10rpx;
  font-size: 35rpx;
  word-break:break-all;
}
navigator{
  display:inline;
}
.publishTime_reply{
  display: flex;
  margin-bottom: 10rpx;
}
.commentPublishTime{
  color: rgba(133, 124, 124);
  margin-top:10rpx;
  font-size: 30rpx;
}
.reply{
  color: rgb(133, 124, 124);
  margin-left: 40rpx;
  margin-top:10rpx;
  font-size: 30rpx;
}
.replyBar{
    position: fixed;
    z-index:1;
    bottom:0;
    width:100%;
    height:40px;
    background:#fff;
    border-top:1px solid #eee;
     display: flex;
}
.replyInput{
    background: #f6f6f6;
    border-radius: 5px;
    width:70%;
    margin:7px;
    height:26px;
    padding-left:5px;  
    font-size: 15px;
   
}
.replycancelButton{
    width:10%;
    height:26px;
    font-size: 12px;
    padding:5px;
    line-height: 30px;
    color:#313131;
}
.replysendButton{
    width:10%;
    height:26px;
    font-size: 12px;
    padding:5px;
    line-height: 30px;
    color:#313131;
}
